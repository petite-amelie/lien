
<%= form_with model: @room, method: :post, id: 'new_room', class: 'room-main', local: true do |f| %>

  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">
        新規個展登録
      </h1>
    </div>

    <%# エラーメッセージの表示 %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# //エラーメッセージの表示 %>

    <%# 個展名と個展の説明 %>
    <div class="new-rooms">
      <div class="weight-bold-text">
        個展名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :room_name, class:"rooms-text", id:"room-name", placeholder:"個展名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          個展の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :room_introduction, class:"items-text", id:"item-info", placeholder:"個展の説明（必須 1,000文字まで)" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# //個展名と個展の説明 %>

    <%# 個展ポスター画像 %>
    <div class="rooom-img-upload">
      <div class="weight-bold-text">
        個展ポスター画像
        <span class="indispensable">任意</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :room_image, id:"room-image" %>
      </div>
    </div>
    <%# //個展ポスター画像 %>

    <%# 個展ジャンル %>
    <div class="rooom-img-upload">
      <div class="weight-bold-text">
        ジャンル
        <span class="indispensable">必須(複数選択可)</span>
      </div>
      <div class="click-upload">
        <p>
          該当するジャンルにチェックを入れてください
        </p>
        <% ["絵画","テキスタイル","写真","立体","書道"].each do |genres| %>
          <%= f.check_box :genre, {multiple: true}, genres, nil %>
          <%= genres %>
        <% end %>
      </div>
    </div>
    <%# 個展ジャンル %>
    <div class="sell-btn-contents">
      <%= f.submit "作品の登録へ" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
<% end %>