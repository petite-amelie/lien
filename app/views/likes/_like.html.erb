<% if user_signed_in? && current_user.already_liked?(@room) %>
  <%# deleteのpathはprefixではエラーになるため直接URIを記載 %>
  <%= button_to "/rooms/#{@room.id}/likes/#{@room.likes.ids.first}", method: :delete, remote: true, class: "like-btn" do%>
    <%= image_tag "like_red.png", class: "like-delete-btn"%>
  <% end %>
<% else %>
  <%= button_to room_likes_path(@room), method: :post, remote: true do %>
    <%= image_tag "like_white.png", class: "like-delete-btn"%>
  <% end %>
<% end %>